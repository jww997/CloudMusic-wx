@import "/app.wxss";

.container .menu-items {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0 45rpx 30rpx;
  border-bottom: 1px solid #efefef;
}

.container .menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .menu-item text {
  font-size: 20rpx;
  margin-top: 10rpx;
}

.container .menu-item .iconfont {
  width: 70rpx;
  height: 70rpx;
  background-image: linear-gradient(to right, rgba(255, 0, 0, 0.8), #f00);
  border-radius: 50%;
  font-size: 60rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}