

.banner {
  height: 0;
  display: flex;
  justify-content: center;
  padding-bottom: 150rpx;
  margin-bottom: 100rpx;
  background-color: #f00;
}

.banner swiper {
  width: 100%;
  height: 250rpx;
}

.banner swiper-item {
  box-sizing: border-box;
  padding: 0 5%;
}

.banner-item {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}

.banner image {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.banner-title {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: #f00;
  border-radius: 5px 0 0 0;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  padding: 5rpx 10rpx;
}

.menu-items {
  display: flex;
  justify-content: space-around;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.menu-item text {
  font-size: 20rpx;
  margin-top: 10rpx;
}

.menu_icon {
  width: 70rpx;
  height: 70rpx;
  background: #f00;
  border-radius: 50%;
  font-size: 35rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}