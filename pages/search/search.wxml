  </view>
  <!-- 搜索结果 -->
  <view class="search-result">
    <block wx:for="{{searchList}}" wx:key="{{item.id}}">
      <view class="search-result-item" hover-class="search-result-item-hover" catch:tap="toPages" data-to="player" data-id="{{item.id}}">
        <view class="search-song">
          <text>{{item.name}}</text>
          <text>{{item.artists[0].name + " - " + item.album.name}}</text>
        </view>
        <view class="iconfont icon-songMore"></view>
      </view>
    </block>
  </view>
</view>