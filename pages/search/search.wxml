<view id="search">
  <!-- 输入框 -->
  <view class="search-input">
    <input placeholder="老朋友 - 励志豪" value="{{searchValue}}" placeholder-style="color: #ccc" catch:input="onSearch"></input>
    <text class="iconfont icon-singer"></text>
  </view>
  <!-- 底部播放栏 -->
  <template is="playbarTemplate" data="{{isShowPlayBar, isPlayState, playing}}" />
  <!-- 历史记录 -->
  <view class="search-history">
    <view class="search-history-title">
      <text>历史记录</text>
