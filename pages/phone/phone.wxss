.phone {
  padding: 0 20rpx;
}

.phone-explain {
  font-size: 24rpx;
  margin-top: 50rpx;
  color: #666;
}

.phone-input {
  font-size: 28rpx;
  border-bottom: 1px solid #999;
  margin-top: 50rpx;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.phone-input > input {
  flex-grow: 1;
}

.phone-input > input {
  margin-left: 30rpx;
}

.password-input > input {
  margin-right: 30rpx;
}

.password-input > text {
  color: #0080ff;
}

.phone-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
  font-size: 28rpx;
  border-radius: 100rpx;
  text-align: center;
  background-color: #f00;
  color: #fff;
}

.phone-button::after {
  border: none;
}

button, [type="button"], [type="reset"], [type="submit"] {
  -webkit-appearance: none;
}
