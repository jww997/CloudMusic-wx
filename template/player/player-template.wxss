@keyframes discTurn {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

Page {
  height: 100%;
}

.player {
  z-index: 99;
  position: fixed;
  background: #fff;
  width: 100%;
  height: 100%;
}

.player-phonograph {
  height: 100%;
  background-size: 0;
  background-color: transparent;
  z-index: 1;
}

.player-phonograph::before {
  content: "";
  width: 100%;
  height: 100%;
  background-size: 170%;
  background-image: inherit;
  background-position: center;
  background-repeat: no-repeat;
  background-color: #aaa;
  position: absolute;
  filter: blur(200px);
}

.player-stick {
  position: absolute;
  top: -40rpx;
  left: 0;
  right: 0;
  width: 230rpx;
  height: 340rpx;
  margin: 0 auto;
  padding-left: 150rpx;
  transition: 1s;
  transform: rotate(-30deg);
  transform-origin: 190rpx 40rpx;
  z-index: 2;
}

.player-stick-turn {
  transform: rotate(0deg);
}

.player-disc {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width: 600rpx;
  height: 600rpx;
  margin-top: 150rpx;
  transform-origin: center;
  animation-duration: 10s;
  animation-name: discTurn;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-play-state: paused;
  z-index: 1;
}

.player-disc-running {
  animation-play-state: running;
}

.player-cover {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.player-light {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.player-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 64%;
  height: 64%;
  border-radius: 50%;
}


.player-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 100rpx;
  right: 0;
  left: 0;
  color: #fff;
  padding: 0 100rpx;
}

.player-bar>view {
  font-size: 40rpx;
}


.player-bar>view.icon-play,
.player-bar>view.icon-pause {
  font-size: 100rpx;
}
